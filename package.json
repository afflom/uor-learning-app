{
  "name": "uor-learning-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "postinstall": "npx playwright install",
    "dev": "next dev",
    "dev:turbo": "next dev --turbo",
    "codespaces": "node start-codespaces.js",
    "build": "next build",
    "start": "next start",
    "preview": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "compile:kb": "tsc -p knowledgebase/tsconfig.json",
    "test:browser": "npx playwright test",
    "test:kb": "npm run compile:kb && npx playwright test tests/indexeddb.spec.ts",
    "build:gh-pages": "cross-env NEXT_PUBLIC_BASE_PATH=/uor-learning-app next build"
  },
  "dependencies": {
    "@mdx-js/react": "^3.1.0",
    "@next/mdx": "^15.3.1",
    "better-react-mathjax": "^2.3.0",
    "express": "^5.1.0",
    "next": "^15.3.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rehype-katex": "^7.0.1",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@types/node": "^20.4.2",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.24.0",
    "eslint-config-next": "^15.3.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3"
  }
